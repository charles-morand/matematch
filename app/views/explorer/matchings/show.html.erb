<div class="container-guide-profile">

  <div class="guide-profile">
    <div id="profile-photo">
      <%= image_tag(url_for(@matched_user.photo)) %>
    </div>

    <div class="name-age">
      <h1><%= @matched_user.first_name %></h1>
      <h2><%= @matched_user.age %></h2>
    </div>

    <div class="hobbies">
      <% @matched_user.hobbies.each do |hobby| %>
        <%= hobby %>
      <% end %>
    </div>

    <div class="guide-bio">
      <p><%= @matched_user.bio %></p>
    </div>

    <div class="language">
      <% @matched_user.languages.each do |language|%>
        <%= language %>
      <% end %>
    </div>
  </div>

  <div class="address">
   <p><span><i class="fas fa-map-marker-alt"></i></span><span>Lives in <strong><%= @matched_user.address %></strong></span></p>
  </div>

  <div class="gender">
    <p><span><i class="far fa-user"></i></span><span><%= @matched_user.gender %></span></p>
  </div>

  <div class="guide-profile-button-send">
    <%= simple_form_for(@contact_request, url: explorer_matching_contact_requests_path(@matched_user)) do |f| %>
      <%= f.submit "Send a request", class: "btn" %>
    <% end %>
  </div>

</div>
