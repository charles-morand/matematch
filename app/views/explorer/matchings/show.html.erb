<div class="container-guide-profile">

  <div class="orange-background">
    <div class="upper-back-arrow">
    <%= link_to explorer_matchings_path do %>
      <i class="fas fa-arrow-left arrow-white"></i>
    <% end %>
  </div>
  </div>

  <div class="profile-photo">
    <div class="avatar-profile place-avatar-profile">
      <%= image_tag(url_for(@matched_user.photo)) %>
    </div>
  </div>

  <div class="guide-profile">

    <div class="guide-name">
      <h3><%= @matched_user.first_name %></h3>
    </div>

    <div class="guide-age">
      <div class="first-part-age">
        <p><%= @matched_user.age %></p>
      </div>
      <div class="second-part-age">
        <p>yrs</p>
      </div>
    </div>

    <div class="guide-hobbies">
      <% @matched_user.hobbies.each do |hobby| %>
        <div class="gold-pill profile-page-hobbies">
          <%= hobby %>
        </div>
      <% end %>
    </div>

    <div class="guide-bio">
      <p><%= @matched_user.bio %></p>
    </div>

    <div class="guide-languages">
      <% @matched_user.languages.each do |language|%>
        <div class="show-guides-card-infos-language">
          <%= flag_icon(language) %>
        </div>
      <% end %>
    </div>

    <div class="guide-address">
      <div class="icon-address">
        <i class="fas fa-map-marker-alt"></i>
      </div>
      <div class="text-address">
        <p>Lives in <strong><%= @matched_user.address %></strong></p>
      </div>
    </div>

    <div class="guide-gender">
      <div class="icon-gender">
        <i class="far fa-user"></i>
      </div>
      <div class="text-gender">
        <%= @matched_user.gender %>
      </div>
    </div>
  </div>

  <div class="long-button display-bottom-center">
    <div class="guide-profile-button-send">
      <%= simple_form_for(@contact_request, url: explorer_matching_contact_requests_path(@matched_user)) do |f| %>
        <%= f.submit "Send a request", class: "btn" %>
      <% end %>
    </div>
  </div>

</div>
