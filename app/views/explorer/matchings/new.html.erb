<%= simple_form_for(@selected_activity) do |f| %>
    <%= f.label :language %> </br>
    <%= f.text_field :title %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.label :Adresse %> </br>
    <%= f.text_field :address %> </br>
    <%= f.label :"Prix/jour" %> </br>
    <%= f.text_field :price_per_day %>
    <%= f.input :chair_type, collection: Chair::AUTHORIZED_TYPES %>
    <%= f.submit "Soumettez votre assise !", class: "btn" %>
  <% end %>
  <%= link_to("Retour aux chaises", chairs_path) %>
