<%= form_tag explorer_matchings_path, method: :get do %>
  <div class="search-form">
    <div class="search-input">

      <div class="picked-languages">
        <div class="languages-title">
          <h4>Language</h4>
        </div>
        <div class="displayed-languages">
          <% User::LANGUAGES.each do |language| %>
            <div class="checkbox-button">
              <span class="hid-checkbox"><%= check_box_tag "languages[]", language, false, id: "language-#{language}" %></span>
              <span class="label-checkbox"><%= label_tag "language-#{language}", language %></span>
            </div>
          <% end %>
        </div>
      </div>

      <div id="picked-city">
        <h4>Location</h4>
        <div class="location">
          <%= text_field_tag :city,
            params[:city],
            class: "form-control",
            placeholder: "Type a city..."%>
          </div>
      </div>


      <div class="picked-genders">
        <h4>Gender</h4>
        <% User::GENDERS.each do |gender| %>
          <%= check_box_tag "genders", gender, false, id: "gender-#{gender}" %>
          <%= label_tag "gender-#{gender}", gender %>
        <% end %>
      </div>

      <div class="chosen-age">
        <h4>Age</h4>
        <%= number_field_tag "age[]", :ages, in: 18..99, step: 1, multiple: true %>
        <%= number_field_tag "age[]", :ages, in: 18..99, step: 1, multiple: true %>
      </div>

      <div class="picked-hobbies">
        <h4>Hobbies</h4>
        <% User::HOBBIES.each do |hobby| %>
          <%= check_box_tag "hobbies[]", hobby, false, id: "hobby-#{hobby}" %>
          <%= label_tag "hobby-#{hobby}", hobby %>
        <% end %>
      </div>

    </div>
    <div class= "pages-buttons">
      <div class="previous-page">
        <%= link_to explorer_activities_path do%>
          <i class="fas fa-arrow-circle-left"></i>
        <% end %>
      </div>
      <div class="next-page">
        <%= button_tag type: 'submit', class: "button postfix" do%>
         <i class="fas fa-arrow-circle-right"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
