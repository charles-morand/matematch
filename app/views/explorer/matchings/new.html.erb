<%= form_tag explorer_matchings_path, method: :get do %>
  <div class="search-form">
    <div class="search-input">

      <% User::LANGUAGES.each do |language| %>
        <%= check_box_tag "languages[]", language, false, id: "language-#{language}" %>
        <%= label_tag "language-#{language}", language %>
      <% end %>

       <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a city..."%>



    </div>
    <div>
      <%= submit_tag "Chercher", class: "btn" %>
    </div>
  </div>
<% end %>
