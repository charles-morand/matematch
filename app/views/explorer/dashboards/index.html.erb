<div class="home-dashboard">

  <div class="home-dashboard-landing">
    <div class="home-dashboard-background">
      <%= image_tag("backgrounds/home-background.jpg", id:"home-background", alt:"Van jaune sur la route dans le désert")%>
    </div>

    <div class="home-dashboard-header">
      <div class="home-dashboard-logo">
         <%= image_tag("logos/logo-blanc.png", id:"logo-white", alt:"logo de matematch écrit en blanc")%>
      </div>
      <div class="icon-my-profile">
        <i class="fas fa-user-circle"></i>
      </div>
    </div>
  </div>

  <div class="home-dashboard-requests">
    <div class="home-dashboard-requests-title">
      <h3>My requests</h3>
    </div>

    <div class="home-dashboard-requests-cards">
        <% @sent_requests.each do |request|%>

        <div class="home-dashboard-requests-card">
          <div class="home-dashboard-requests-card-infos">
            <div class="home-dashboard-requests-card-avatar avatar-request">
              <%= image_tag(url_for(request.guide.photo), width: 300) %>
            </div>
            <div class="home-dashboard-requests-card-name-activity">
              <div class="home-dashboard-requests-card-name">
                <%= request.guide.first_name %>
              </div>
              <div class="home-dashboard-requests-card-activity">
                <%= request.activity %>
              </div>
            </div>
          </div>
          <div class="home-dashboard-requests-card-status">
            <%= request.status %>
          </div>
        </div>
       <% end %>
    </div>
  </div>

  <div class="long-button-gold sticky-bottom">
  <%# Le bouton doit reprendre le bouton long couleur gold et avoir un comportement sticky d'où la deuxième classe %>
    <%= link_to "Find an experience", explorer_activities_path %>
  </div>

</div>
