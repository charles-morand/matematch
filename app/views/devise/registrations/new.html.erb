<div class="container-sign-up">
  <div class="sign-up-header">
    <div class="blanc-logo">
      <%= image_tag("logos/logo-blanc.svg", alt:"logo de matematch Ã©crit en blanc")%>
    </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
    <%# Page 1 %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :phone_number,
                  required: true,
                  input_html: { autocomplete: "phone_number" } %>
                  <%# Page 2 %>
      <%= f.input :first_name,
                  required: true,
                  input_html: { autocomplete: "first_name" } %>
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "last_name" } %>
      <%= f.input :birth_date,
                  required: true,
                  input_html: { autocomplete: "birth_date" } %>
      <% User::ROLES.each do |role| %>
        <%= check_box_tag "roles[]", role, false, id: "role-#{role}", class:"form-checkbox check-roles" %>
        <%= label_tag "role-#{role}", role %>
      <%end %>
                  <%# Page 3 %>
      <%= f.input :address,
                  required: true,
                  input_html: { autocomplete: "address" } %>
      <% User::HOBBIES.each do |hobby| %>
        <%= check_box_tag "hobbies[]", hobby, false, id: "hobby-#{hobby}", class:"form-checkbox check-hobbies" %>
        <%= label_tag "hobby-#{hobby}", hobby %>
      <%end %>
      <%= f.input :languages,
                  required: true,
                  input_html: { autocomplete: "languages" } %>
      <%= f.input :bio,
                  required: true,
                  input_html: { autocomplete: "bio" } %>
    </div>

    <div class="form-actions">
      <div class="long-button-gold">
        <%= f.button :submit, "Sign up" %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
